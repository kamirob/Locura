<html>
    <body>
        <div class="login-container">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <h2>Registro</h2>
                        <br>
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <%= render "devise/shared/error_messages", resource: resource %>

    
                            <div class="avatar">                            
                                <%= f.file_field :avatar%>
                            </div>
                            <div class="field">
                                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Correo Electrónico" %>
                            </div>
                            <br>
                            <div class="field">
                                <%= f.text_field :name, placeholder: "Nombre" %>
                            </div>
                            <br>
                            <div class="field">
                                <%= f.text_field :lastname, placeholder: "Apellido" %>
                            </div>
                            <br>
                            <div class="dropdown">
                                <%= f.collection_select(:department_id, Department.all, :id, :name, { include_blank: "Seleccione su departamento" },  {class: "btn btn-default dropdown-toggle"}) %>
                            </div>    
                            <div class="field">
                                <% if @minimum_password_length %>

                                <% end %><br />
                                <%= f.password_field :password, autocomplete: "new-password", placeholder: "Contraseña" %>
                            </div>
                            <br>
                            <div class="field">
                                <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirmar Contraseña"%>
                            </div>
                            <br>
                            <div class="actions">
                                <%= f.submit "Registrarse", class: 'button' %>
                            </div>
                            <% end %>
                            <br>
                            <%= render "devise/shared/links" %>          
                    </div>  
                </div>
            </div>  
        </div>
    </body>  
</html>